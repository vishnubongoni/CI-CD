pipeline {
  agent none
  stages {
    stage('Back-end') {
      agent {
        docker { image 'python:3.11-alpine' }
      }
      steps {
        sh 'python --version'
        sh 'pip install flask'
      }
    }
    stage('Front-end') {
      agent {
        docker { image 'python:3.11-alpine' }
      }
      steps {
        sh 'python --version'
        sh 'pip install streamlit'
      }
    }
  }
}

